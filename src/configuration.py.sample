def update_live_prefix(id, prefix):
    global PREFIXES
    current_prefix = PREFIXES.get(id, None)
    if prefix != current_prefix:
        if prefix is None:
            PREFIXES.delete(id)
        else:
            PREFIXES[id] = prefix


